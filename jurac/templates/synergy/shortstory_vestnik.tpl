<div class="post-wrap-vestnik">
	<div class="post animated fadeIn" data-animated="fadeIn">
        <h3 class="post-title"><a href="{full-link}">{title}</a></h3>
        <a class="imgwidth-11" href="{full-link}"><img class="post-image" src="{image-1}" alt="{title}"></a>	
        <div class="post-message-vestnik">{short-story limit="450"}</div>
        <div class="post-details">Добавил: {author} {date}  в категорию {link-category}</div>
		<a href="{full-link}" class="button-vestnik">Подробнее</a>
	</div>
</div>
